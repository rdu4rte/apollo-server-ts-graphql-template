{
  "name": "apollo-server-ts-graphql-template",
  "version": "1.0.0",
  "description": "Apollo Server template",
  "main": "src/server.ts",
  "repository": "https://github.com/rdu4rte/apollo-server-ts-graphql-template",
  "author": "rdu4rte",
  "license": "MIT",
  "scripts": {
    "dev": "NODE_ENV=DEV yarn seed && NODE_ENV=DEV nodemon ./src/server.ts",
    "local": "NODE_ENV=DEV nodemon ./src/server.ts",
    "clean": "rimraf dist",
    "build": "yarn clean && tsc -p tsconfig-build.json",
    "prepare": "husky install",
    "prod": "node dist/server.js",
    "test": "NODE_ENV=TEST jest --passWithNoTests --no-cache --runInBand",
    "test:watch": "yarn test --verbose --watch",
    "test:staged": "yarn test --detectOpenHandles --findRelatedTests **/*.spec.ts",
    "test:coverage": "yarn test --coverage",
    "lint": "eslint .",
    "lint:fix": "yarn format && yarn lint --fix",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "seed": "ts-node-dev --transpile-only src/infra/seed/index.ts"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/module-alias": "^2.0.1",
    "@types/mongodb": "3.6.20",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.0",
    "@typescript-eslint/parser": "^5.57.0",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^34.0.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "nodemon": "^2.0.22",
    "rimraf": "^4.4.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.3"
  },
  "dependencies": {
    "@apollo/server": "^4.5.0",
    "class-validator": "^0.14.0",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "graphql": "^16.6.0",
    "module-alias": "^2.2.2",
    "mongodb": "3.6.3",
    "reflect-metadata": "^0.1.13",
    "type-graphql": "2.0.0-beta.1",
    "typedi": "^0.10.0",
    "winston": "^3.8.2"
  }
}
